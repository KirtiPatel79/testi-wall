# Database - PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://testiwall:YOUR_SECURE_PASSWORD@localhost:5432/testiwall"

# NextAuth - Required for authentication
# Generate with: openssl rand -base64 32
AUTH_SECRET="generate-a-random-32-byte-secret-here"

# App URL - Your public URL (no trailing slash)
# Use your domain or VPS IP, e.g. https://testiwall.example.com or http://YOUR_IP:3001
NEXTAUTH_URL="https://your-domain.com"
NEXT_PUBLIC_APP_URL="https://your-domain.com"

# Trust host - Set to true when using reverse proxy (nginx)
AUTH_TRUST_HOST="true"

# Optional: Seed data (for initial setup only)
# SEED_USER_EMAIL="admin@example.com"
# SEED_USER_PASSWORD="your-secure-password"
# RESET_TESTIMONIALS="false"
